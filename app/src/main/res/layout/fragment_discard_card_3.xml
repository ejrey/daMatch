<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiscardFragment">

    <ImageView
        android:id="@+id/draw_card_deck3"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="473dp"
        android:adjustViewBounds="true"
        android:background="@drawable/deck_front"
        android:contentDescription="@string/deck_front"
        android:elevation="0dp"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/img_discard_order_2_0"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/card_image"
        android:elevation="1dp" />

    <ImageView
        android:id="@+id/img_discard_order_2_2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/card_image"
        android:elevation="1dp" />

    <ImageView
        android:id="@+id/img_discard_order_2_1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/card_image"
        android:elevation="1dp" />

</RelativeLayout>