<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawOne"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawCardFragment">

    <ImageView
        android:id="@+id/draw_card_deck"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="473dp"
        android:adjustViewBounds="true"
        android:background="@drawable/deck_front"
        android:contentDescription="@string/deck_front"
        android:elevation="0dp"
        android:scaleType="centerInside" />

    <ImageButton
        android:id="@+id/img_draw_order_2_0"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/card_image"
        android:elevation="1dp"
        android:scaleType="centerInside" />

    <ImageButton
        android:id="@+id/img_draw_order_2_2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/card_image"
        android:elevation="1dp"
        android:scaleType="centerInside" />

    <ImageButton
        android:id="@+id/img_draw_order_2_1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="120dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/card_image"
        android:elevation="1dp"
        android:scaleType="centerInside" />

</RelativeLayout>